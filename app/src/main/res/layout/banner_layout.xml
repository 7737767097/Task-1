<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/img_c_banner_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/image_banner" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#77000000" />

    <ImageView
        android:id="@+id/img_play"
        android:layout_width="@dimen/size_35"
        android:layout_height="@dimen/size_35"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_15"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_marginRight="@dimen/size_05"
        android:src="@drawable/play" />

    <TextView
        android:id="@+id/txt_header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_header_2"
        android:layout_toRightOf="@+id/img_play"
        android:text="header text 1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_header_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_15"
        android:layout_toRightOf="@+id/img_play"
        android:text="header text 2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_v_small_12" />

</RelativeLayout>
